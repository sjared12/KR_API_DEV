# Payment Service environment sample
# Copy to .env and update with your deployment-specific values.

# Primary datasource (PostgreSQL recommended)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/payment_service
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# Optional dedicated Square datasource (falls back to the primary datasource when blank)
SQUARE_DATASOURCE_URL=
SQUARE_DATASOURCE_USERNAME=
SQUARE_DATASOURCE_PASSWORD=

# Admin credentials for the lightweight dashboards and plan APIs
APP_ADMIN_USER=admin
APP_ADMIN_PASS=changeme

# Square credentials
SQUARE_API_TOKEN=sq0atp-xxxxxxxxxxxxxxxxxxxxxxxxxxxx
SQUARE_LOCATION_ID=XXXXXXXXXXXX
SQUARE_APPLICATION_ID=sandbox-sq0idb-xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Square webhook verification
SQUARE_WEBHOOK_SIGNATURE_KEY=whsec-xxxxxxxxxxxxxxxxxxxxxxxxxxxx
SQUARE_WEBHOOK_NOTIFICATION_URL=https://example.com/api/square/webhook